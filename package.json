{
  "mcpName": "io.github.AungMyoKyaw/betterprompt-mcp",
  "name": "betterprompt-mcp",
  "version": "0.2.1",
  "description": "MCP server that converts user requests to AI-enhanced prompts using world-class prompt engineering techniques",
  "license": "MIT",
  "type": "module",
  "author": "Aung Myo Kyaw (https://github.com/AungMyoKyaw)",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompt-engineering",
    "ai",
    "typescript",
    "prompt-enhancement",
    "llm",
    "claude",
    "vscode",
    "cursor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AungMyoKyaw/betterprompt-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/AungMyoKyaw/betterprompt-mcp/issues"
  },
  "homepage": "https://github.com/AungMyoKyaw/betterprompt-mcp#readme",
  "bin": {
    "betterprompt-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:validation": "tsx tests/validation.ts",
    "test:comprehensive": "npm run test:validation",
    "test:all": "npm run test && npm run test:validation",
    "type-check": "tsc --noEmit",
    "lint": "eslint -c .eslintrc.cjs src/**/*.ts",
    "lint:fix": "eslint -c .eslintrc.cjs src/**/*.ts --fix",
    "dev": "tsx watch src/index.ts",
    "prepack": "npm run build",
    "ci": "npm ci && npm run type-check && npm run format:check && npm run build && npm run test:all",
    "start": "node dist/index.js",
    "lint:ci": "eslint -c .eslintrc.cjs \"src/**/*.ts\" --format json -o artifacts/lint-report.json",
    "lint:autofix": "sh scripts/lint-autofix-and-commit.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.18.0",
    "chalk": "^5.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "audit-ci": "^7.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.4.2",
    "shx": "^0.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "vitest": "^1.2.0"
  }
}
